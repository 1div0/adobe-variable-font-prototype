languagesystem DFLT dflt;
languagesystem latn dflt; # Latin default

#--------------------------------------
# rvrn is in effect when the GSUB FeatureVariations conditions are NOT met.
feature rvrn {
	sub dollar.nostroke by dollar;
} rvrn;

# lookup RVRN is in effect when the GSUB FeatureVariations conditions ARE met.
lookup RVRN {
	sub dollar by dollar.nostroke;
} RVRN;


#-------------------------------------------
feature size {
	parameters 10.0 0; # design size, subfamily
} size;
